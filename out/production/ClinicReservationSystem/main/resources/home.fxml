<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="500.0" prefWidth="503.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.HomeController">
    <children>
        <!-- Clinic Logo -->
        <ImageView fitHeight="99.0" fitWidth="148.0" layoutX="203.0" layoutY="40.0"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@/images/clinic logo.png" />
            </image>
        </ImageView>

        <!-- Welcome Text -->
        <Text fontSmoothingType="LCD" layoutX="126.0" layoutY="186.0"
              strokeType="OUTSIDE" strokeWidth="0.0"
              text="Welcome in Our Clinic Reservation APP"
              textAlignment="CENTER" wrappingWidth="261.86">
            <font>
                <Font name="System Bold Italic" size="14.0" />
            </font>
        </Text>

        <!-- Login Button -->
        <Button fx:id="loginButton" layoutX="181.0" layoutY="214.0"
                onAction="#handleLogin" text="Login" prefWidth="141.0" prefHeight="35.0"
                style="-fx-background-color: #15BF8F; -fx-border-radius: 5; -fx-background-radius: 5; -fx-text-fill: white; -fx-font-weight: bold;"
                onMouseEntered="#onHoverIn" onMouseExited="#onHoverOut">
            <effect>
                <DropShadow radius="5.0" offsetX="0" offsetY="2" color="#888888"/>
            </effect>
        </Button>

        <!-- Register Button -->
        <Button fx:id="registerButton" layoutX="181.0" layoutY="267.0"
                onAction="#handleRegister" text="Register" prefWidth="141.0" prefHeight="35.0"
                style="-fx-background-color: white; -fx-border-color: #15BF8F; -fx-border-radius: 5; -fx-background-radius: 5; -fx-text-fill: #15BF8F; -fx-font-weight: bold;"
                onMouseEntered="#onHoverIn" onMouseExited="#onHoverOut">
            <effect>
                <DropShadow radius="5.0" offsetX="0" offsetY="2" color="#888888"/>
            </effect>
        </Button>

        <!-- Exit Button -->
        <Button fx:id="exitButton" layoutX="181.0" layoutY="322.0"
                onAction="#handleExit" text="Exit" prefWidth="141.0" prefHeight="35.0"
                style="-fx-background-color: white; -fx-border-color: #ff5555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-text-fill: #ff5555; -fx-font-weight: bold;"
                onMouseEntered="#onHoverIn" onMouseExited="#onHoverOut">
            <effect>
                <DropShadow radius="5.0" offsetX="0" offsetY="2" color="#888888"/>
            </effect>
        </Button>

    </children>
</AnchorPane>
